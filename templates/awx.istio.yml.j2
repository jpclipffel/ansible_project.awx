---
apiVersion: networking.istio.io/v1alpha3
kind: Gateway
metadata:
 name: {{ awx_gateway | default("awx-gw") }}
 namespace: {{ awx_namespace | default("awx") }}
spec:
 selector:
   app: {{ awx_ingressgateway | default("istio-ingressgateway") }}
 servers:
 # HTTPS
 - port:
     number: 443
     name: https
     protocol: HTTPS
   tls:
     mode: SIMPLE
     serverCertificate: /etc/istio/ingressgateway-certs/tls.crt
     privateKey: /etc/istio/ingressgateway-certs/tls.key
   hosts:
   - "*"
 # HTTP
 - port:
     number: 80
     name: http
     protocol: HTTP
   tls:
     httpsRedirect: true
   hosts:
{% for host in awx_gateway_hosts %}
   - {{ host }}
{% endfor %}


---
apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: {{ awx_virtualservice | default("awx-vs") }}
  namespace: {{ awx_namespace | default("awx") }}
spec:
  hosts:
  - "*"
  gateways:
  - {{ awx_gateway | default("awx-gw") }}
  http:
  - name: "http"
    route:
    - destination:
        host: awx-web-svc
        port:
          number: 80
